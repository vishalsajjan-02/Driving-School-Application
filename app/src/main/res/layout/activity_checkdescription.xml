<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Checkdescription">
    <ImageView
        android:id="@+id/image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="100dp"
        android:layout_centerHorizontal="true"
        />

<TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/image"
    android:layout_marginTop="10dp"
    android:textSize="20dp"
    android:layout_marginLeft="100dp"
    />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@id/text1"
        android:layout_marginLeft="100dp"

        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/text5"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iss_auto_cycle="true"
            app:iss_delay="1000"
            app:iss_period="1000"
            app:iss_text_align="CNETRE"
            />
    </androidx.cardview.widget.CardView>
    
    <Button
        android:id="@+id/btnphonecall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:text="Call"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/btnphonewhatsapp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:text="WhatsApp"
        android:layout_toRightOf="@id/btnphonecall"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/btnnotification1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnphonewhatsapp"
        android:text="notification"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>