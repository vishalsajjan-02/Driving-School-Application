               android:textSize="20dp"/>

           <EditText
               android:id="@+id/age"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="20dp"
               android:inputType="number"
               />
       </LinearLayout>
