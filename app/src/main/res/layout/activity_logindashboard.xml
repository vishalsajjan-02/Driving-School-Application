            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile1"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                >
                <ImageView

                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon113"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Profile"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course1.1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/course1.2"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon114"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course1.2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Course"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/payment"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/payment1"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon115"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Payment"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invoice"
            android:layout_width="74dp"
            android:layout_height="94dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/invoice1"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon116" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/invoice1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Invoice"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/teacher"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@id/profile"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/teacher1"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon117"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teacher1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Teacher"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rechrage"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@id/profile"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/rechrage1"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon118"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rechrage1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Rechrage"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/leave"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@id/profile"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/leave1"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon119"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leave1"
                android:layout_centerHorizontal="true"
