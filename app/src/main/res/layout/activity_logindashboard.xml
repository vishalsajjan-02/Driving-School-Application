<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logindashboard"
    >
    <RelativeLayout
        android:id="@+id/aa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/welcomeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back,"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/Domen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_below="@id/welcomeback"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.01.2024"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/Domen"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our all course :"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_below="@id/date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view all"
        android:textColor="#1D3EF3"
        android:textSize="30dp"
        android:layout_below="@id/date"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        />
<RelativeLayout
    android:id="@+id/relativeall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/view"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
    <RelativeLayout
        android:id="@+id/relative01"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/editimagelogin"

        >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="01"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/uniform1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/one"
            android:layout_marginLeft="20dp"
            android:text="Uniform driving"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/hours1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uniform1"
            android:layout_marginLeft="20dp"
            android:text="hours (colved)"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hours1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="100.00$"
            android:textSize="20dp"
            android:textColor="@color/white"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/editimagelogin1"
        android:layout_alignParentRight="true"
        >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        >
    <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="02"
        android:textColor="@color/black"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/uniform2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/two"
            android:layout_marginLeft="20dp"
            android:text="Uniform driving"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/hours2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uniform2"
            android:layout_marginLeft="20dp"
            android:text="hours (colved)"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hours2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:text="200.00$"
            android:textSize="20dp"
            />

    </RelativeLayout>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/relativeall"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_centerInParent="true"

            android:src="@drawable/icon112" />
    </RelativeLayout>

    <TextView
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Categories :"
        android:layout_below="@id/icon"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <RelativeLayout
        android:id="@+id/relative02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/service">
        <RelativeLayout
