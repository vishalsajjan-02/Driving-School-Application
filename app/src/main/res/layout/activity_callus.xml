<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".callus">
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="-50dp"
        ></RelativeLayout>
    <RelativeLayout
        android:id="@+id/callus"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/textcallus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=" Contact us "
            android:textColor="#000000"
            android:textSize="30dp"
            />
        <ImageView
            android:id="@+id/backcallus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon100"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon103"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/emailcallus"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/callus"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/borderlogin">
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#3D6DFF"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/borderlogin"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Call us"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/emailus10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Email us"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle"
        android:layout_below="@id/emailcallus"
        android:layout_marginLeft="-300dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >
        </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/phonecall"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/emailcallus"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="10dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           >
           <ImageView
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:src="@drawable/call1"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Phone"
               android:textAlignment="center"
               android:layout_gravity="center"
               android:textSize="25dp"

               />
       </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/whatsapp1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/phonecall"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/whatsapp1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whats app"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="25dp"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>